<h2>Book detail</h2>

    <table>
       <tbody>
         <% @books.each do |book| %>
         <tr>
           <td></td>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
           <td><%= link_to "Edit", edit_book_path(book.id) %></td>
           <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "dete-confirm" =>"Are you sure?" %></td>
           </tr>
         <% end %>
       </tbody>
    </table>